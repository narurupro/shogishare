<div class="container-fluid">
  <div class="row">
    
    <% if logged_in?  %>
    
    <div>
<h3>最近登録した棋譜一覧</h3>

<%= render "game_records/game_records", game_records: @game_records %>

<%= paginate @game_records %>

  
</div>
    
    
    
    <%  else %>
    
    <div class="center jumbotron">
      <div class="text-center">
        <h1>Shogishareへようこそ</h1>
        <p>様々な棋譜を参考にできます</p>
      </div>
    </div>
    <div class="text-center">
       <%=  link_to "新規登録", signup_path ,class: "btn btn-success btn-lg" %>
       <%= link_to 'ログイン', login_path, class: "btn btn-warning btn-lg" %>
    </div>
    
    <%  end %>
    
  </div>
</div>